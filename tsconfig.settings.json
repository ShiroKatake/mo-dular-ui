{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noErrorTruncation": true,
    "baseUrl": "./",
    "paths": {
      "@modular-ui/base/*": ["./packages/mo-ui-base/src/*"],
      "@modular-ui/base": ["./packages/mo-ui-base/src/"],
      "@modular-ui/styled/*": ["./packages/mo-ui-styled/src/*"],
      "@modular-ui/styled": ["./packages/mo-ui-styled/src/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
